@model StudentsInterestSystem.Models.Student

@using System.Globalization

@{
    ViewData["Title"] = "Student Details";
}

<div class="container-fluid bg-light p-5 rounded shadow-lg">
    <div class="row d-flex align-items-center">
        <div class="col-md-7">
            <h1 class="display-4 text-dark">@Model.Name</h1>
            <hr class="bg-dark" />
        </div>
        <div class="col-md-5 d-flex justify-content-end">
            <a href="@Url.Action("AllStudents", "Student")" class="btn btn-outline-dark">Back to Students</a>
        </div>
    </div>

    <div class="row mt-5 d-flex justify-content-center">
        <div class="col-md-8">
            <dl class="row text-muted fs-5">
                <dt class="col-sm-4 fw-bold">Roll Number:</dt>
                <dd class="col-sm-8">@Model.RollNo</dd>

                <dt class="col-sm-4 fw-bold">Email:</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4 fw-bold">Gender:</dt>
                <dd class="col-sm-8">@Model.Gender</dd>

                <dt class="col-sm-4 fw-bold">Date of Birth:</dt>
                <dd class="col-sm-8">@Model.DOB.ToString("MMMM dd, yyyy", CultureInfo.InvariantCulture)</dd>

                <dt class="col-sm-4 fw-bold">City:</dt>
                <dd class="col-sm-8">@Model.City</dd>
            </dl>
        </div>
        <div class="col-md-8 mt-5">
            <dl class="row text-muted fs-5">
                <dt class="col-sm-4 fw-bold">Interest:</dt>
                <dd class="col-sm-8">@Model.Interest</dd>

                <dt class="col-sm-4 fw-bold">Department:</dt>
                <dd class="col-sm-8">@Model.Department</dd>

                <dt class="col-sm-4 fw-bold">Degree Title:</dt>
                <dd class="col-sm-8">@Model.DegreeTitle</dd>

                <dt class="col-sm-4 fw-bold">Subject:</dt>
                <dd class="col-sm-8">@Model.Subject</dd>

                <dt class="col-sm-4 fw-bold">Start Date:</dt>
                <dd class="col-sm-8">@Model.StartDate.ToString("MMMM dd, yyyy", CultureInfo.InvariantCulture)</dd>

                <dt class="col-sm-4 fw-bold">End Date:</dt>
                <dd class="col-sm-8">@Model.EndDate.ToString("MMMM dd, yyyy", CultureInfo.InvariantCulture)</dd>
            </dl>
        </div>
    </div>
</div>
